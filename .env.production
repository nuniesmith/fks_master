# =================================================================
# .env.production - Production Environment Configuration
# =================================================================

# Production Application Settings
APP_ENV=production
APP_LOG_LEVEL=WARNING
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Production Build Configuration
BUILD_TYPE_CPU=cpu
SERVICE_RUNTIME=python
BUILD_PYTHON=true
BUILD_RUST_NETWORK=false
BUILD_RUST_EXECUTION=false
BUILD_CONNECTOR=false
BUILD_DOTNET=false
BUILD_NODE=false

# Docker Hub Registry Settings
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=nuniesmith

# Security Settings
SSL_ENABLED=true
USE_EXTERNAL_SECRETS=true
ENABLE_SECURITY_HEADERS=true
RATE_LIMITING_ENABLED=true

# Production Services
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
BACKUP_ENABLED=true

# Production Requirements
API_REQUIREMENTS_FILE=requirements_prod_docker.txt
APP_REQUIREMENTS_FILE=requirements_prod_docker.txt
DATA_REQUIREMENTS_FILE=requirements_prod_docker.txt
WORKER_REQUIREMENTS_FILE=requirements_prod_docker.txt
WEB_REQUIREMENTS_FILE=requirements_prod_docker.txt
TRAINING_REQUIREMENTS_FILE=requirements_gpu_docker.txt
TRANSFORMER_REQUIREMENTS_FILE=requirements_gpu_docker.txt

# Performance Tuning
HEALTHCHECK_START_PERIOD=120s
HEALTHCHECK_RETRIES=5
HEALTHCHECK_TIMEOUT=15s
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=512MB
REDIS_MAXMEMORY=1gb

# Production Resource Limits
API_CPU_LIMIT=4
API_MEMORY_LIMIT=4096M
DATA_CPU_LIMIT=4
DATA_MEMORY_LIMIT=4096M
WORKER_CPU_LIMIT=4
WORKER_MEMORY_LIMIT=4096M

# External Secrets (when using Docker secrets)
POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
REDIS_PASSWORD_FILE=/run/secrets/redis_password
SECRET_KEY_FILE=/run/secrets/secret_key

# Domain Configuration
DOMAIN_NAME=${DOMAIN_NAME:-localhost}

# Production Logging
LOG_DRIVER=json-file
LOG_MAX_SIZE=50m
LOG_MAX_FILES=5
