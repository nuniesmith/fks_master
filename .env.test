# Test environment for SSL
COMPOSE_PROJECT_NAME=fks
APP_ENV=development
ENVIRONMENT=development
NODE_ENV=development

# Docker Configuration
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=nuniesmith
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Service Ports
API_PORT=8000
WEB_PORT=3000
DATA_PORT=9001
HTTP_PORT=80
HTTPS_PORT=443
POSTGRES_PORT=5432
REDIS_PORT=6379

# Database Configuration
POSTGRES_DB=fks_trading
POSTGRES_USER=fks_user
POSTGRES_PASSWORD=fks_postgres_test123
REDIS_PASSWORD=fks_redis_test123

# SSL and Domain Configuration
DOMAIN_NAME=localhost
ENABLE_SSL=true
SSL_STAGING=false
SSL_MOUNT_PATH=./config/ssl

# Nginx Configuration
API_HOST=api
WEB_HOST=web
WORKER_HOST=worker
WORKER_PORT=8001
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Application URLs
API_URL=https://localhost:8000
REACT_APP_API_URL=https://localhost:8000

# Debug and Logging
DEBUG_MODE=true
APP_LOG_LEVEL=DEBUG
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Health Checks
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=60s

# Timezone
TZ=America/New_York

# Development settings
SRC_MOUNT=./src/python
SRC_MOUNT_MODE=rw
