# =================================================================
# .env.development - Development Environment Configuration
# =================================================================

# Development Application Settings
APP_ENV=development
APP_LOG_LEVEL=DEBUG
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Development Build Configuration
BUILD_TYPE=cpu
SERVICE_RUNTIME=python
BUILD_PYTHON=true
BUILD_RUST_NETWORK=false
BUILD_RUST_EXECUTION=false
BUILD_CONNECTOR=false
BUILD_DOTNET=false
BUILD_NODE=false

# Development Source Mounting (read-write for hot reload)
SRC_MOUNT=./src/python
SRC_MOUNT_MODE=rw
WEB_SRC_MOUNT=./src/web
WEB_SRC_MOUNT_MODE=rw

# Development Features
ENABLE_DEBUG_TOOLBAR=true
ENABLE_HOT_RELOAD=true
ENABLE_PROFILER=false
ADMINER_ENABLED=true
REDIS_COMMANDER_ENABLED=true

# Development Resource Limits (lighter for local development)
API_CPU_LIMIT=1
API_MEMORY_LIMIT=1024M
DATA_CPU_LIMIT=1
DATA_MEMORY_LIMIT=1024M
WORKER_CPU_LIMIT=1
WORKER_MEMORY_LIMIT=1024M
WEB_CPU_LIMIT=0.5
WEB_MEMORY_LIMIT=512M
NGINX_CPU_LIMIT=0.25
NGINX_MEMORY_LIMIT=128M

# Development Database Settings (lighter limits)
POSTGRES_MAX_CONNECTIONS=50
POSTGRES_SHARED_BUFFERS=128MB
REDIS_MAXMEMORY=256mb

# Development Health Checks (faster for quick feedback)
HEALTHCHECK_START_PERIOD=30s
HEALTHCHECK_RETRIES=2
HEALTHCHECK_TIMEOUT=5s
HEALTHCHECK_INTERVAL=15s

# Development Logging (smaller files for local development)
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILES=2

# Development Workers (fewer for local)
WORKER_COUNT=1

# Development Ports (ensure no conflicts)
API_PORT=8000
WORKER_PORT=8001
WEB_PORT=3000
DATA_PORT=9001
NINJA_API_PORT=8090
NGINX_PORT=80
HTTPS_PORT=443

# Development GPU settings (in case you have local GPU)
TRAINING_PORT=8088
TENSORBOARD_PORT=6006
TRANSFORMER_PORT=8089
GRADIO_PORT=7860
GPU_COUNT=1

# Development SSL (disabled for local)
ENABLE_SSL=false
SSL_STAGING=true

# Development Node environment
NODE_ENV=development

# Development Ninja API settings
NINJA_SRC_MOUNT=./src/ninja
NINJA_SRC_MOUNT_MODE=rw
DOTNET_VERSION=8.0
BUILD_DOTNET=true
