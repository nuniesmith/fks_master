# =================================================================
# .env.gpu - GPU Development Environment Configuration
# =================================================================

# GPU Application Settings
APP_ENV=development
APP_LOG_LEVEL=DEBUG
DEBUG_MODE=true
VERBOSE_LOGGING=true
DEPLOYMENT_TARGET=gpu

# GPU Build Configuration
BUILD_TYPE=gpu
SERVICE_RUNTIME=python
BUILD_PYTHON=true
BUILD_RUST_NETWORK=false
BUILD_RUST_EXECUTION=false
BUILD_CONNECTOR=false
BUILD_DOTNET=false
BUILD_NODE=false

# GPU Source Mounting (read-write for hot reload)
SRC_MOUNT=./src/python
SRC_MOUNT_MODE=rw
WEB_SRC_MOUNT=./src/web
WEB_SRC_MOUNT_MODE=rw

# GPU-specific Docker settings
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# CUDA Configuration
CUDA_VERSION=12.8.0
CUDNN_VERSION=cudnn
UBUNTU_VERSION=ubuntu24.04

# GPU Resource Limits (higher for GPU workloads)
API_CPU_LIMIT=2
API_MEMORY_LIMIT=2048M
DATA_CPU_LIMIT=2
DATA_MEMORY_LIMIT=2048M
WORKER_CPU_LIMIT=2
WORKER_MEMORY_LIMIT=2048M
WEB_CPU_LIMIT=1
WEB_MEMORY_LIMIT=1024M
NGINX_CPU_LIMIT=0.5
NGINX_MEMORY_LIMIT=256M

# GPU Services Configuration
TRAINING_PORT=8088
TENSORBOARD_PORT=6006
TRANSFORMER_PORT=8089
GRADIO_PORT=7860
GPU_COUNT=1
TRAINING_GPU_COUNT=1
TRANSFORMER_GPU_COUNT=1

# Training Configuration
TRAINING_MODEL_TYPE=lstm
TRAINING_EPOCHS=100
TRAINING_BATCH_SIZE=64
TRAINING_LEARNING_RATE=0.001

# Transformer Configuration
TRANSFORMER_MODEL_NAME=microsoft/DialoGPT-medium
TRANSFORMER_MAX_LENGTH=512
TRANSFORMER_DEVICE=cuda

# GPU Database Settings (moderate limits for GPU workloads)
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
REDIS_MAXMEMORY=512mb

# GPU Health Checks (longer for GPU initialization)
HEALTHCHECK_START_PERIOD=120s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_TIMEOUT=15s
HEALTHCHECK_INTERVAL=30s

# GPU Logging (moderate for GPU development)
LOG_DRIVER=json-file
LOG_MAX_SIZE=50m
LOG_MAX_FILES=3

# GPU Workers (moderate for GPU)
WORKER_COUNT=2

# Standard Ports
API_PORT=8000
WORKER_PORT=8001
WEB_PORT=3000
DATA_PORT=9001
HTTP_PORT=80
HTTPS_PORT=443

# SSL Configuration (disabled for local GPU development)
ENABLE_SSL=false
SSL_STAGING=true

# Development Features (enabled for GPU development)
ENABLE_DEBUG_TOOLBAR=true
ENABLE_HOT_RELOAD=true
ENABLE_PROFILER=true
ADMINER_ENABLED=false
REDIS_COMMANDER_ENABLED=false

# Node environment
NODE_ENV=development
