# FKS Multi-Server Environment Configuration
# ===========================================

# Environment Configuration
NODE_ENV=production
ENVIRONMENT=production
TZ=America/Toronto

# Multi-Server Configuration
AUTH_DOMAIN_NAME=auth.7gram.xyz
API_DOMAIN_NAME=api.7gram.xyz
WEB_DOMAIN_NAME=fks.7gram.xyz

# Database Configuration
POSTGRES_DB=fks_production
POSTGRES_USER=fks_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_HOST=timescaledb
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change_this_secret_key
API_CORS_ORIGINS=https://fks.7gram.xyz,https://auth.7gram.xyz

# Authentication Configuration
AUTH_JWT_SECRET=change_this_jwt_secret
AUTH_JWT_ALGORITHM=HS256
AUTH_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_PASSWORD_HASH_ALGORITHM=bcrypt

# Web Configuration
WEB_API_URL=https://api.7gram.xyz
WEB_AUTH_URL=https://auth.7gram.xyz

# GPU Configuration (for AI workloads)
ENABLE_GPU=false
GPU_MEMORY_FRACTION=0.8
CUDA_VISIBLE_DEVICES=0

# External Services
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
DISCORD_WEBHOOK_URL=

# Monitoring
NETDATA_CLAIM_TOKEN=
NETDATA_CLAIM_URL=https://app.netdata.cloud
NETDATA_CLAIM_ROOMS=

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# SSL Configuration
SSL_EMAIL=admin@7gram.xyz
LETSENCRYPT_EMAIL=admin@7gram.xyz
